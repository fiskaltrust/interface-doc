{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/*.sln",
            "src/DotnetNew/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ],
          "src": "src"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "pdf": {
    "keepRawFiles": true,
    "wkhtmltopdf": {
      "additionalArguments": "--footer-center [page] --margin-top 25 --margin-bottom 25 --margin-left 30 --margin-right 30 cover cover.html toc --xsl-style-sheet style.xsl"
    },
    "content": [
      {
        "files": [
          "doc/**/*.md",
          "*.md",
          "pdf/toc.yml"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**",
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": [
          "doc/toc.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "doc/**/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "template": [
      "pdf.default",
      "templates/fiskaltrust.pdf",
      "./DocFx.Plugins.PlantUml/template"
    ],
    "markdownEngineProperties": {
      "plantUml.outputFormat":"Svg",
      "plantUml.remoteUrl":"http://www.plantuml.com/plantuml/",
      "plantUml.renderingMode":"remote"
    },
    "dest": "_site_pdf"
  }
}